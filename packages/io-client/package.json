{
  "name": "@mocktomata/io-client",
  "version": "7.0.0-beta.10",
  "description": "mocktomata client IO package",
  "homepage": "https://github.com/mocktomata/mocktomata",
  "bugs": {
    "url": "https://github.com/mocktomata/mocktomata/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mocktomata/mocktomata.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "files": [
    "lib",
    "libm"
  ],
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "yarn build:lib && yarn build:libm",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:libm": "tsc -p tsconfig.libm.json",
    "clean": "rimraf lib libm .tsc",
    "coverage": "jest -c jest.config.jsdom.js --coverage --reporters=default",
    "dc": "yarn depcheck",
    "depcheck": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "cross-env TIMING=1 eslint --ext=ts,js,cjs,mjs .",
    "test": "jest -c jest.config.jsdom.js --reporters=default",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn dc && yarn coverage",
    "watch": "yarn test:watch"
  },
  "dependencies": {
    "@mocktomata/framework": "workspace:*",
    "cross-fetch": "^3.1.4",
    "type-plus": "^4.11.1"
  },
  "devDependencies": {
    "@mocktomata/file-server": "workspace:*",
    "@mocktomata/io-fs": "workspace:*",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "ts-jest": "^28.0.7"
  },
  "engines": {
    "node": ">= 6"
  }
}
