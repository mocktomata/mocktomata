{
  "name": "@mocktomata/cli",
  "version": "7.0.0-beta.11",
  "description": "mocktomata cli",
  "keywords": [
    "boundary",
    "boundary-testing",
    "fixture",
    "mocking",
    "testing",
    "testing-framework",
    "testing-tools"
  ],
  "homepage": "https://github.com/mocktomata/mocktomata/tree/main/packages/cli",
  "bugs": {
    "url": "https://github.com/mocktomata/mocktomata/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mocktomata/mocktomata.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "mocktomata": "./lib/bin.js",
    "mtmt": "lib/bin.js"
  },
  "files": [
    "lib",
    "ts"
  ],
  "scripts": {
    "build": "run-p build:esm",
    "build:esm": "tsc",
    "clean": "rimraf coverage esm lib libm tslib *.tsbuildinfo",
    "coverage": "jest --coverage --reporters=default",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,js,cjs,mjs .",
    "test": "jest --reporters=default",
    "test:watch": "jest --watch",
    "verify": "npm-run-all -p lint build coverage test depcheck",
    "watch": "pnpm run test:watch"
  },
  "dependencies": {
    "@mocktomata/service": "workspace:^",
    "chalk": "^4.1.1",
    "clibuilder": "^8.0.2",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "ansi-colors": "^4.1.1",
    "depcheck": "^1.4.3",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^28.0.7",
    "typescript": "~4.8.3"
  },
  "engines": {
    "node": ">= 14.16"
  }
}
