{
  "name": "mocktomata",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage --maxWorkers=60%",
    "coverage:nodejs": "cross-env JEST_ENV=nodejs jest --coverage --maxWorkers=60%",
    "depcheck": "lerna run depcheck",
    "dev": "yarn test:watch",
    "lint": "eslint --ext=js,ts .",
    "mtmt": "node ./packages/mocktomata/lib/bin.js",
    "ncu": "echo npm-check-updates && ncu -i && lerna exec ncu -- -i",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest",
    "test:browser": "lerna run test:browser",
    "test:electron": "cross-env JEST_ENV=electron jest --maxWorkers=60%",
    "test:jsdom": "cross-env JEST_ENV=jsdom jest --maxWorkers=60%",
    "test:nodejs": "cross-env JEST_ENV=nodejs jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "yarn clean && yarn lint && yarn build && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch",
    "watch:browser": "cd packages/mocktomata && yarn run test:watch:browser",
    "watch:electron": "cross-env JEST_ENV=electron yarn test:watch",
    "watch:jsdom": "cross-env JEST_ENV=jsdom yarn test:watch",
    "watch:nodejs": "cross-env JEST_ENV=nodejs yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.2",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@jest-runner/electron": "^3.0.1",
    "@types/boom": "^7.3.0",
    "@types/delay": "^3.1.0",
    "@types/hapi__hapi": "^20.0.8",
    "@types/jest": "^26.0.23",
    "@types/md5": "^2.3.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^15.12.1",
    "@types/node-fetch": "^2.5.10",
    "@types/rimraf": "^3.0.0",
    "@types/tmp": "^0.2.0",
    "@types/update-notifier": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "ansi-colors": "^4.1.1",
    "assertron": "^7.1.3",
    "babel-jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "codecov": "^3.8.2",
    "commitlint-circle": "^1.0.0",
    "core-js": "^3.14.0",
    "cross-env": "^7.0.3",
    "delay": "^5.0.0",
    "dependency-check": "^4.1.0",
    "electron": "^15.5.5",
    "eslint": "^8.21.0",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^6.0.0",
    "iso-error": "^3.2.5",
    "jest": "^27.0.4",
    "jest-watch-exec": "^1.4.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^0.6.4",
    "karma": "^6.3.3",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-typescript": "^5.5.1",
    "karma-typescript-es6-transform": "^5.5.1",
    "karma-webpack": "^5.0.0",
    "lerna": "^4.0.0",
    "memfs": "^3.2.2",
    "node-fetch": "^2.6.1",
    "npm-check-updates": "^11.6.0",
    "param-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "rimraf": "^3.0.2",
    "satisfier": "^5.1.0",
    "source-map-loader": "^3.0.0",
    "tmp": "^0.2.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "type-plus": "3.12.0",
    "typescript": "~4.7.4",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "write-file-atomic": "^3.0.3"
  }
}
