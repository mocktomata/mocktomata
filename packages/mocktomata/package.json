{
  "name": "mocktomata",
  "version": "7.0.0-beta.10",
  "description": "A Behavior Tracking and Simulation System",
  "keywords": [
    "boundary",
    "boundary-testing",
    "fixture",
    "testing",
    "testing-framework",
    "testing-tools"
  ],
  "homepage": "https://github.com/mocktomata/mocktomata",
  "bugs": {
    "url": "https://github.com/mocktomata/mocktomata/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mocktomata/mocktomata.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "browser": {},
  "typings": "lib/index.d.ts",
  "bin": {
    "mtmt": "lib/bin.js"
  },
  "files": [
    "lib",
    "libm",
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:libm && pnpm run build:browser",
    "build:browser": "webpack",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:libm": "tsc -p tsconfig.libm.json",
    "clean": "rimraf lib libm dist .tsc",
    "coverage": "jest --coverage --reporters=default",
    "dc": "pnpm run depcheck",
    "depcheck": "dependency-check . --unused --no-dev -i standard-log-color -i @mocktomata/io-client  && dependency-check . --missing --no-dev",
    "lint": "cross-env TIMING=1 eslint --ext=ts,js,cjs,mjs .",
    "test": "jest --reporters=default",
    "test:browser": "karma start --single-run",
    "test:watch": "jest --watch",
    "test:watch:browser": "karma start",
    "verify": "pnpm run lint && pnpm run build && pnpm run dc && pnpm run coverage",
    "watch": "pnpm run test:watch",
    "watch:browser": "pnpm run test:watch:browser"
  },
  "dependencies": {
    "@mocktomata/file-server": "workspace:*",
    "@mocktomata/framework": "workspace:*",
    "@mocktomata/io-client": "workspace:*",
    "@mocktomata/io-local": "workspace:*",
    "async-fp": "^5.0.3",
    "chalk": "^4.1.1",
    "clibuilder": "^7.2.1",
    "global-store": "^1.0.0-beta.18",
    "standard-log": "^6.2.1",
    "standard-log-color": "^3.2.1",
    "type-plus": "^4.11.1",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@kayahr/jest-electron-runner": "^5.1.1",
    "@mocktomata/plugin-fixture-deep-link": "^1.0.12",
    "@mocktomata/plugin-fixture-dummy": "^1.1.10",
    "ansi-colors": "^4.1.1",
    "assertron": "^9.2.5",
    "babel-loader": "^8.2.5",
    "core-js": "^3.24.1",
    "electron": "^20.0.1",
    "jest": "^28.1.3",
    "karma": "^6.4.0",
    "karma-babel-preprocessor": "^8.0.2",
    "karma-chrome-launcher": "^3.1.1",
    "karma-jasmine": "^5.1.0",
    "karma-typescript": "^5.5.3",
    "karma-typescript-es6-transform": "^5.5.3",
    "karma-webpack": "^5.0.0",
    "param-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "source-map-loader": "^4.0.0",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "typescript": "~4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
