{
  "extends": "plugin:harmony/latest",
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "overrides": [
    {
      "extends": "plugin:harmony/ts-recommended",
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "parserOptions": {
        "project": "packages/*/tsconfig.json"
      },
      "rules": {
        "@typescript-eslint/type-annotation-spacing": "off",
        "no-use-before-define": "off"
      }
    }
  ]
}
