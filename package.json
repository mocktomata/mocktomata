{
  "name": "mocktomata",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage --maxWorkers=60%",
    "depcheck": "lerna run depcheck",
    "dev": "yarn test:watch",
    "lint": "eslint --ext=js,ts .",
    "ncu": "echo npm-check-updates && ncu -u && lerna exec ncu -- -u",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest",
    "test:browser": "lerna run test:browser",
    "test:electron": "cross-env JEST_ENV=electron jest",
    "test:jsdom": "cross-env JEST_ENV=jsdom jest",
    "test:nodejs": "cross-env JEST_ENV=nodejs jest",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "yarn clean && yarn lint && yarn build && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch",
    "watch:browser": "cd packages/mocktomata && yarn run test:watch:browser",
    "watch:electron": "cross-env JEST_ENV=electron yarn test:watch",
    "watch:jsdom": "cross-env JEST_ENV=jsdom yarn test:watch",
    "watch:nodejs": "cross-env JEST_ENV=nodejs yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@jest-runner/electron": "^2.0.3",
    "@types/boom": "^7.3.0",
    "@types/delay": "^3.1.0",
    "@types/hapi__hapi": "^19.0.2",
    "@types/md5": "^2.1.33",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.7.7",
    "@types/node-fetch": "^2.5.5",
    "@types/rimraf": "^2.0.3",
    "@types/tmp": "^0.1.0",
    "@types/update-notifier": "^4.1.0",
    "@unional/devpkg-node": "^1.5.0",
    "ansi-colors": "^4.1.1",
    "assertron": "^7.1.2",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.5",
    "commitlint-circle": "^1.0.0",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.0",
    "delay": "^4.3.0",
    "electron": "^8.0.2",
    "husky": "^4.2.3",
    "iso-error": "^3.2.1",
    "jest": "^25.1.0",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "jest-watch-exec": "^1.4.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^1.0.2",
    "jest-watch-typeahead": "^0.4.2",
    "karma": "^4.4.1",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^3.1.1",
    "karma-typescript": "^4.1.1",
    "karma-typescript-es6-transform": "^4.1.1",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.20.2",
    "memfs": "^3.1.1",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^4.0.3",
    "param-case": "^3.0.3",
    "pascal-case": "^3.1.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "tmp": "^0.1.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "type-plus": "^1.34.0",
    "typescript": "^3.8.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
