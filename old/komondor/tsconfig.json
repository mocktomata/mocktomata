{
  "extends": "./tsconfig.base.json",
  "atom": {
    "rewriteTsconfig": false
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "inlineSourceMap": false,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "sourceMap": true,
    "strict": true
  },
  "references": [
    { "path": "../komondor-plugin"}
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "custom-typings",
    "src2"
  ],
  "files": [
    "src2/index.ts"
  ]
}
