{
  "name": "b-spec",
  "description": "Code Boundary Specification System",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist-es5",
    "dist-es2015",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "clean": "rimraf dist dist-es5 && rimraf dist-es2015",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dependency-check": "echo 'no dependency check yet'",
    "_dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.base.json",
    "_lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "npm run clean && tsc && ava",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/b-spec.git"
  },
  "bugs": {
    "url": "https://github.com/unional/b-spec/issues"
  },
  "homepage": "https://github.com/unional/b-spec",
  "ava": {
    "files": [
      "dist-es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist-es5/**/*.js",
      "*.json"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "devDependencies": {
    "@types/github": "^7.1.0",
    "@types/lokijs": "^1.5.0",
    "@types/node": "^8.0.47",
    "ava": "^0.24.0",
    "dependency-check": "^2.9.1",
    "eslint": "^4.10.0",
    "eslint-config-unional": "^0.2.3",
    "github": "^13.1.0",
    "mem-fs": "^1.1.3",
    "memory-fs": "^0.4.1",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^11.0.2",
    "tslint": "^5.8.0",
    "tslint-config-unional": "^0.9.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "assertron": "^3.3.8",
    "dnode": "^1.2.2",
    "get-port": "^3.2.0",
    "lokijs": "^1.5.1",
    "satisfier": "^2.0.1",
    "tersify": "^0.3.0",
    "unpartial": "^0.4.1"
  }
}
