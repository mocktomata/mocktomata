{
  "name": "mocktomata",
  "version": "7.0.0-beta.11",
  "description": "A Behavior Tracking and Simulation System",
  "keywords": [
    "boundary",
    "boundary-testing",
    "fixture",
    "testing",
    "testing-framework",
    "testing-tools"
  ],
  "homepage": "https://github.com/mocktomata/mocktomata",
  "bugs": {
    "url": "https://github.com/mocktomata/mocktomata/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mocktomata/mocktomata.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "exports": {
    "import": "./esm/index.js"
  },
  "types": "./esm/index.d.ts",
  "bin": {
    "mtmt": "lib/bin.js"
  },
  "files": [
    "dist",
    "esm",
    "ts"
  ],
  "scripts": {
    "build": "run-p build:esm",
    "build:browser": "webpack -c webpack.config.cjs",
    "build:esm": "tsc",
    "clean": "rimraf coverage esm lib libm tslib *.tsbuildinfo",
    "coverage": "jest --coverage --reporters=default",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,js,cjs,mjs .",
    "test": "jest --reporters=default",
    "test:electron": "jest -c jest.electron.cjs --reporters=default",
    "test:jsdom": "jest -c jest.jsdom.cjs --reporters=default",
    "test:watch": "jest --watch",
    "verify": "npm-run-all -p lint build coverage test:jsdom test:electron -p depcheck",
    "watch": "pnpm run test:watch"
  },
  "dependencies": {
    "@mocktomata/file-server": "workspace:*",
    "@mocktomata/framework": "workspace:*",
    "@mocktomata/io-client": "workspace:*",
    "@mocktomata/io-local": "workspace:*",
    "async-fp": "^8.0.0",
    "chalk": "^4.1.1",
    "clibuilder": "^8.0.2",
    "global-store": "^1.0.0-beta.21",
    "standard-log": "^10.0.0",
    "standard-log-color": "^8.0.0",
    "type-plus": "^4.13.1",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@kayahr/jest-electron-runner": "^5.1.1",
    "@mocktomata/plugin-fixture-deep-link": "workspace:*",
    "@mocktomata/plugin-fixture-dummy": "workspace:*",
    "ansi-colors": "^4.1.1",
    "assertron": "^9.2.5",
    "depcheck": "^1.4.3",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "param-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "source-map-loader": "^4.0.0",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "typescript": "~4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "engines": {
    "node": ">= 14.16"
  }
}
