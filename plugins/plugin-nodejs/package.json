{
  "name": "@mocktomata/plugin-nodejs",
  "version": "0.1.11-beta.0",
  "private": true,
  "description": "mocktomata plugin for nodejs",
  "keywords": [
    "mocktomata-plugin"
  ],
  "homepage": "https://github.com/mocktomata/mocktomata",
  "bugs": {
    "url": "https://github.com/mocktomata/mocktomata/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mocktomata/mocktomata.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "exports": {
    "import": "./esm/index.js"
  },
  "types": "./esm/index.d.ts",
  "files": [
    "esm",
    "ts"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf coverage esm lib libm tslib *.tsbuildinfo",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --reporters=default",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,js,cjs,mjs .",
    "nuke": "pnpm run clean && rimraf node_modules",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --reporters=default",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "verify": "npm-run-all -p lint build coverage -p depcheck",
    "watch": "pnpm run test:watch"
  },
  "dependencies": {
    "@mocktomata/framework": "workspace:^"
  },
  "devDependencies": {
    "depcheck": "^1.4.3",
    "dirname-filename-esm": "^1.1.1",
    "jest": "^29.2.1",
    "jest-validate": "29.4.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.3",
    "typescript": "~4.9.0"
  },
  "engines": {
    "node": ">= 14.16"
  }
}
