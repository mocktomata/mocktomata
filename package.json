{
  "name": "komondor",
  "description": "Your friendly guard dog for writing tests across boundaries",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-esnext/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist-es5",
    "dist-esnext"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5 && npm run build-esnext",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-esnext": "tsc -p tsconfig.esnext.json",
    "clean": "rimraf dist dist-es5 && rimraf dist-esnext",
    "codecov": "codecov",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "verify": "npm run build && npm run lint && npm run coverage && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/komondor.git"
  },
  "bugs": {
    "url": "https://github.com/unional/komondor/issues"
  },
  "homepage": "https://github.com/unional/komondor",
  "keywords": [
    "testing",
    "testing-tools",
    "testing-framework",
    "fixture",
    "boundary",
    "boundary-testing"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/scripts/setup-test-env.js"
    ],
    "testRegex": ".*\\.spec.ts$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.6",
    "aurelia-logging-color": "^0.5.15",
    "dependency-check": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-harmony": "^1.0.3",
    "jest": "^22.4.3",
    "power-assert": "^1.5.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.7",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.9.3",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@unional/logging": "^0.4.1",
    "assertron": "^4.3.0",
    "komondor-plugin": "^1.5.2",
    "make-error": "^1.3.4",
    "node-fetch": "^2.1.2",
    "satisfier": "^4.4.1",
    "tersify": "^1.2.4",
    "unpartial": "^0.4.1"
  }
}
