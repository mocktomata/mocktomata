{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "clean": {
      "cache": false
    },
    "coverage": {
      "dependsOn": [
        "^build"
      ]
    },
    "depcheck": {
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "size": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ]
    },
    "verify": {
      "dependsOn": [
        "build",
        "lint",
        "coverage",
        "depcheck",
        "size"
      ]
    },
    "watch": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "ts/*.ts",
        "ts/*.tsx",
        "ts/**/*.ts",
        "ts/**/*.tsx"
      ]
    }
  }
}
