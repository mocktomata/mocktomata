{
  "name": "mocktomata",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage --maxWorkers=60%",
    "coverage:nodejs": "cross-env JEST_ENV=nodejs jest --coverage --maxWorkers=60%",
    "depcheck": "lerna run depcheck",
    "dev": "yarn test:watch",
    "lint": "eslint --ext=js,ts .",
    "mtmt": "node ./packages/mocktomata/lib/bin.js",
    "ncu": "echo npm-check-updates && ncu -u && lerna exec ncu -- -u",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest",
    "test:browser": "lerna run test:browser",
    "test:electron": "cross-env JEST_ENV=electron jest --maxWorkers=60%",
    "test:jsdom": "cross-env JEST_ENV=jsdom jest --maxWorkers=60%",
    "test:nodejs": "cross-env JEST_ENV=nodejs jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "yarn clean && yarn lint && yarn build && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch",
    "watch:browser": "cd packages/mocktomata && yarn run test:watch:browser",
    "watch:electron": "cross-env JEST_ENV=electron yarn test:watch",
    "watch:jsdom": "cross-env JEST_ENV=jsdom yarn test:watch",
    "watch:nodejs": "cross-env JEST_ENV=nodejs yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@jest-runner/electron": "^3.0.0",
    "@types/boom": "^7.3.0",
    "@types/delay": "^3.1.0",
    "@types/hapi__hapi": "^20.0.0",
    "@types/md5": "^2.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.6.4",
    "@types/node-fetch": "^2.5.7",
    "@types/rimraf": "^3.0.0",
    "@types/tmp": "^0.2.0",
    "@types/update-notifier": "^4.1.1",
    "@unional/devpkg-node": "^1.5.0",
    "ansi-colors": "^4.1.1",
    "assertron": "^7.1.3",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.7.2",
    "commitlint-circle": "^1.0.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "delay": "^4.4.0",
    "electron": "^10.1.1",
    "husky": "^4.2.5",
    "iso-error": "^3.2.5",
    "jest": "^26.4.2",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "jest-watch-exec": "^1.4.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "karma": "^5.2.1",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-typescript": "^5.1.0",
    "karma-typescript-es6-transform": "^5.1.0",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.22.1",
    "memfs": "^3.2.0",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^8.1.0",
    "param-case": "^3.0.3",
    "pascal-case": "^3.1.1",
    "rimraf": "^3.0.2",
    "satisfier": "^5.1.0",
    "source-map-loader": "^1.1.0",
    "tmp": "^0.2.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "type-plus": "^1.35.1",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "write-file-atomic": "^3.0.3"
  }
}
