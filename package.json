{
  "name": "komondor",
  "description": "Your friendly guard dog for writing tests across boundaries",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "publishConfig": {
    "tag": "next"
  },
  "release": {
    "analyzeCommits": {
      "releaseRules": [
        {
          "breaking": true,
          "release": "minor"
        }
      ]
    }
  },
  "files": [
    "dist-es5",
    "dist-es2015",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "clean": "rimraf dist dist-es5 && rimraf dist-es2015",
    "codecov": "codecov",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dependency-check": "dependency-check . --unused --no-dev -i flux-standard-action && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/komondor.git"
  },
  "bugs": {
    "url": "https://github.com/unional/komondor/issues"
  },
  "homepage": "https://github.com/unional/komondor",
  "keywords": [
    "testing",
    "testing-tools",
    "testing-framework",
    "fixture",
    "boundary",
    "boundary-testing"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": ".*\\.(test|spec).(js|ts)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.7",
    "aurelia-logging-color": "^0.5.15",
    "dependency-check": "^3.1.0",
    "eslint": "^4.19.0",
    "eslint-plugin-harmony": "^1.0.3",
    "jest": "^22.4.2",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.0.3",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.9.2",
    "typescript": "^2.9.0-dev.20180324"
  },
  "dependencies": {
    "@unional/logging": "^0.4.0",
    "assertron": "^4.2.0",
    "flux-standard-action": "^2.0.1",
    "komondor-plugin": "^1.1.0",
    "node-fetch": "^2.1.1",
    "satisfier": "^4.2.1",
    "tersify": "^1.2.2"
  }
}
