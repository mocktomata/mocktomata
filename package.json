{
  "name": "komondor",
  "version": "0.0.0-development",
  "description": "Your friendly guard dog for writing tests across boundaries",
  "keywords": [
    "boundary",
    "boundary-testing",
    "fixture",
    "testing",
    "testing-framework",
    "testing-tools"
  ],
  "homepage": "https://github.com/unional/komondor",
  "bugs": {
    "url": "https://github.com/unional/komondor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/komondor.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "files": [
    "dist-es2015"
  ],
  "main": "dist-es2015/index.js",
  "typings": "dist-es2015/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build-es2015",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "build-es5": "tsc -p tsconfig.es5.json",
    "clean": "rimraf dist dist-es5 && rimraf dist-es2015",
    "codecov": "codecov",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "test": "npm run build && jest",
    "verify": "npm run build && npm run lint && npm run coverage && npm run dependency-check",
    "verify-ci": "npm run build && npm run lint && npm run coverage -- --maxWorkers=4 && npm run dependency-check",
    "watch": "npm run build && jest --watch"
  },
  "dependencies": {
    "@unional/logging": "^0.5.3",
    "assertron": "^5.2.0",
    "chalk": "^2.4.1",
    "is-primitive": "^3.0.1",
    "komondor-plugin": "^1.7.7",
    "make-error": "^1.3.5",
    "ramda": "^0.25.0",
    "satisfier": "^4.5.0",
    "tersify": "^1.2.6",
    "unpartial": "^0.4.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.0",
    "@types/ramda": "^0.25.39",
    "@unional/jest-progress-reporter": "^2.0.0",
    "aurelia-logging-color": "^0.5.16",
    "aurelia-logging-memory": "^0.3.2",
    "codecov": "^3.1.0",
    "cucumber": "^4.2.1",
    "delay": "^3.1.0",
    "dependency-check": "^3.2.1",
    "eslint": "^5.7.0",
    "eslint-plugin-harmony": "^1.0.4",
    "greenkeeper-lockfile": "^1.15.1",
    "jest": "^23.6.0",
    "jest-audio-reporter": "^2.2.0",
    "jest-watch-suspend": "^1.1.0",
    "jest-watch-toggle-config": "^1.0.2",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.10.5",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-unional": "^0.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.1.3"
  }
}
