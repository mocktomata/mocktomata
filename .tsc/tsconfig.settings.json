{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"downlevelIteration": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": ["es2015"],
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "LF",
		"noUnusedLocals": true,
		// This is added just in case tsconfig.json forgot to have `noEmit: true`
		"outDir": ".nowhere",
		"removeComments": false,
		// type-plus need this at the moment
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	}
}
