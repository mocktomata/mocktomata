{
	"name": "mocktomata",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"build:watch": "tsc -b -w",
		"clean": "turbo run clean",
		"cli": "pnpm --filter @mocktomata/cli",
		"coverage:nodejs": "cross-env JEST_ENV=nodejs turbo run coverage",
		"coverage": "turbo run coverage",
		"cs": "changeset",
		"depcheck": "turbo run depcheck",
		"dev": "pnpm run test:watch",
		"framework": "pnpm --filter @mocktomata/framework",
		"io-remote": "pnpm --filter @mocktomata/io-remote",
		"lint": "turbo run lint",
		"mocktomata": "pnpm --filter mocktomata",
		"mt": "node ./packages/cli/lib/bin.js",
		"nodejs": "pnpm --filter @mocktomata/nodejs",
		"nuke": "pnpm --no-bail --filter=* nuke && pnpm --no-bail nuke:local",
		"nuke:local": "rimraf node_modules",
		"plugin-nodejs": "pnpm --filter @mocktomata/plugin-nodejs",
		"plugin-ws": "pnpm --filter @mocktomata/plugin-ws",
		"postpack": "pinst --enable",
		"prepack": "pinst --disable",
		"prepare": "husky install",
		"publish": "pnpm publish -r --publish-branch beta && changeset tag",
		"release": "pnpm build && changeset publish",
		"size": "turbo run size",
		"service": "pnpm --filter @mocktomata/service",
		"test:browser": "pnpm --filter mocktomata test:browser",
		"test:electron": "turbo run test:electron",
		"test:jsdom": "turbo run test:jsdom",
		"test:nodejs": "turbo run test:nodejs",
		"test-nodejs": "pnpm --filter ./tests/nodejs",
		"test": "turbo run test",
		"verify": "turbo run build lint coverage depcheck size",
		"version": "changeset version"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@types/jest": "^29.4.0",
		"@types/md5": "^2.3.2",
		"@types/mkdirp": "^1.0.2",
		"@types/node": "^18.14.0",
		"@types/node-fetch": "^2.6.2",
		"@types/tmp": "^0.2.3",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"cross-env": "^7.0.3",
		"dependency-check": "^4.1.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-harmony": "^7.1.1",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"jest-validate": "29.4.3",
		"jest-watch-repeat": "^2.0.0",
		"jest-watch-suspend": "^1.1.2",
		"jest-watch-toggle-config-2": "^2.1.0",
		"jest-watch-typeahead": "^2.2.2",
		"npm-check-updates": "^16.7.5",
		"npm-run-all": "^4.1.5",
		"pinst": "^3.0.0",
		"rimraf": "^3.0.2",
		"turbo": "^1.8.1",
		"typescript": "~4.9.5"
	},
	"packageManager": "pnpm@7.28.0"
}
